import numpy as np

def temporal_flicker_index(frames):
    """
    Measures temporal instability in reconstructed surgical videos.
    Lower is better.
    """
    diffs = []
    for t in range(1, len(frames)):
        diff = np.mean(np.abs(frames[t] - frames[t-1]))
        diffs.append(diff)
    return np.mean(diffs)
